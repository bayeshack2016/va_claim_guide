div#header
    div#header-content
        a.vfi-header-logo-wrapper(ui-sref="root.home")
            img.vfi-header-logo-img(src='../icons/logo.png')
            h1.vfi-header-logo Vetafi
        div.vfi-header-links
            // If not signed in
            a.big-link(href='/signup' ng-if='!isSignedIn')
                h3 Sign Up
                .vfi-underline-border
            a.big-link(href='/login' ng-if='!isSignedIn')
                h3 Log In
                div.vfi-underline-border
            // If signed in
            div.vfi-menu-wrapper(ng-if="isSignedIn")
                button.vfi-menu-btn(ng-click="onToggleMenu()")
                    div.vfi-menu-icon
                ul.vfi-menu-list(ng-class="{'vfi-show':menuToggled}"
                click-outside="closeThisMenu()"
                outside-if-not="vfi-menu-btn"
                ng-click="onToggleMenu()")
                    li(ui-sref="root.profile.military") My Profile
                    a(href="/auth/logout")
                        li Log out
div.vfi-main-view-wrapper
   ui-view
