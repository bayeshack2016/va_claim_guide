#select-forms-view(ng-controller="claimSelectFormsCtrl")
  h2.header-wrapper Select Forms to Fill
  div.vfi-form-card(ng-repeat="form in forms", ng-class="{'vfi-required': form.required, 'vfi-completed': form.completed}")
    h3.vfi-form-title {{form.name}}
    h5.vfi-form-description {{form.description}}
    a.vfi-form-btn(ng-href="/claim/form/{{form.id}}", ng-if="!form.completed")
      div.vfi-icon-wrapper
        div.vfi-next-icon
    div.vfi-icon-wrapper.vfi-completed(ng-if="form.completed")
      div.vfi-completed-icon
  div.footer-wrapper
    div.vfi-button-wrapper
      button.vfi-cancel-btn(ng-click="onClickCancel()") Cancel
      button.vfi-finish-btn(ng-click="onClickFinish()") Finish
