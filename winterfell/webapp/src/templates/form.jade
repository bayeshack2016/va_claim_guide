div.form-wrapper
    h2.form-title {{formId}}

    hr

    form(ng-submit="onSubmit()" name="form")
        formly-form(model="model" fields="fields" options="options" form="form")

    div.container.nopadding

        label(for="signature-form-row" ng-class="{'signature-success': model.signature}")
            | Sign below
        div.row(id="signature-form-row")
            div.col-xs-6.nopadding
                signature-pad(dataurl="dataurl" clear="clear")
            div.col-xs-1.nopadding
                button(ng-click="clear()")
                    | Clear Signature

        div.row.form-submit-button-group
            button(type="submit")
                | Submit
            button(ng-click="render()")
                | Download
            button(ng-click="save()")
                | Save
