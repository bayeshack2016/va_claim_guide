@import "standards.styl"

#signup-view
#login-view

  #bg
    position: relative
    width: 100%
    height: 600px
    background: url('../icons/veteran-dog-bg.jpg')
    background-size: cover
    background-position: center
    background-repeat: no-repeat
    border-bottom: 4px solid colorPrimaryDarkBlue

  #bg-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba(255, 255, 255, 0.35)

  #view-wrapper
    position: absolute
    top: 0
    left: 0
    right: 0
    width: 90%
    max-width: 940px
    height: 100%
    margin: 0 auto

  #footer
    background-color: colorDarkGray

  .vfi-heading
    position: absolute
    top: largeSpacing
    left: 0
    color: colorBlack

  .vfi-subheading
    position: absolute
    bottom: largeSpacing
    left: 0
    color: colorBlack

  #signup-wrapper
  #login-wrapper
    position: absolute
    top: megaSpacing
    right: 0
    width: (6 * megaSpacing)
    padding: smallSpacing largeSpacing largeSpacing
    box-sizing: border-box
    background-color: colorPrimaryDarkBlue
    color: colorWhite

  .vfi-form-wrapper
    margin-top: mediumSpacing

  .vfi-submit-btn
    position: relative
    float: right
    background-color: colorYellowLight
    color: colorBlack
    overflow: hidden

    & .vfi-progress
      position: absolute
      top: 0px
      left: 0px
      width: 0%
      height: 100%
      background-color: colorYellow

  .vfi-error-msg
    float: left
    color: colorRed

  & input
    display: block
    width: 100%
    margin: 0 auto smallSpacing
    padding: miniSpacing smallSpacing
    box-sizing: border-box
    border: 1px solid transparent
    border-radius: 4px
    outline: none
    font-size: bodyFont_size
    color: colorBlack

    &:active
    &:focus
      box-shadow: 0px 0px 1px 1px colorLightBlue
      border: 1px solid colorLightBlue
