@import "standards.styl"

colorBorder = colorPrimaryDarkBlue
borderType = 2px solid colorBorder

#profile-view
  background-color: colorWarmLightGray

//
// Profile Banner section
//
#profile-banner
  position: relative
  width: 100%
  height: (5 * megaSpacing)
  margin-bottom: largeSpacing
  background: url('../icons/america-flag-bg.jpg')
  background-size: cover
  border-bottom: 2px solid colorWarmDarkGray

#profile-banner-overlay
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.5)

#profile-header-wrapper
  position: absolute
  left: 0
  right: 0
  bottom: 0
  width: maxLayoutWidthPct
  max-width: maxLayoutWidthPx
  margin: 0 auto

.vfi-profile-pic-wrapper
  position: relative
  display: inline-block
  vertical-align: top
  margin-right: largeSpacing

  &:hover .vfi-change-picture-overlay
    height: 3em
    cursor: pointer

.vfi-change-picture-overlay
  position: absolute
  bottom: 0
  left: 0
  width: 100%
  height: 0
  padding: 0 8px
  box-sizing: border-box
  overflow: hidden
  background-color: rgba(0, 0, 0, 0.7)
  color: colorWhite
  transition: height 0.1s linear

  & img
    margin-right: smallSpacing
    vertical-align: middle

.vfi-profile-pic
  height: (3 * megaSpacing)
  margin-bottom: -0.5em
  background-color: colorWarmLightGray
  border: 2px solid colorWarmDarkGray

  &.vfi-default
    padding: mediumSpacing

.vfi-profile-basic-info
  display: inline-block
  color: colorWhite
  font-weight: 400
  font-size: heading1_smaller_size
  line-height: heading1_smaller_lineHeight

  & .vfi-line:first-child
    font-size: heading1_small_size
    line-height: heading1_small_lineHeight
    margin-bottom: mediumSpacing

.vfi-edit-info-btn
  position: absolute
  bottom: 0
  background-color: colorYellow
  color: colorBlack

//
//  Profile Body Section
//
#profile-container
  width: maxLayoutWidthPct
  max-width: maxLayoutWidthPx
  margin: 0 auto

  .vfi-tab-row
    width: 100%

  .vfi-profile-tab
    width: 33.333%
    background-color: colorBorder
    color: colorWhite
    border-radius: 16px 16px 0px 0px

    &.vfi-active
      background-color: colorWhite
      color: colorPrimaryDarkBlue
      border-top: borderType
      border-left: borderType
      border-right: borderType
      cursor: initial

      &:hover
        filter: brightness(1.0)
        -webkit-filter: brightness(1.0)
        -moz-filter: brightness(1.0)
        -ms-filter: brightness(1.0)


  & .vfi-profile-section
    width: 100%
    margin-bottom: mediumSpacing
    padding: largeSpacing megaSpacing
    box-sizing: border-box
    background-color: colorWhite
    border-left: borderType
    border-bottom: borderType
    border-right: borderType

    & .vfi-section-header
      margin-bottom: mediumSpacing
      font-family: Merriweather
      font-size: heading1_small_size
      line-height: heading1_small_lineHeight
      letter-spacing: heading1_letterSpacing

//
// Profile Military section
//
.vfi-profile-section#military

  & .vfi-section-content
    position: relative
    margin-bottom: largeSpacing

    &.military-bg
      height: (2 * megaSpacing)

    &.add-military
      margin-bottom: 0

      & button
        background-color: colorYellow
        color: colorBlack

  & .vfi-section-divider
    margin: mediumSpacing 0
    border-bottom: 1px solid colorWarmLightGray

  & .vfi-insignia
    position: absolute
    top: 0
    right: 0
    width: (2 * megaSpacing)
    height: (2 * megaSpacing)

  & .vfi-add-sign
    display: inline-block
    width: largeSpacing
    height: largeSpacing
    margin-right: smallSpacing
    vertical-align: middle

//
// Profile Military section
//
.vfi-profile-section#claims

  & .vfi-section-content
    margin-bottom: largeSpacing
    padding: mediumSpacing largeSpacing
    border: 2px solid colorDarkGray
    border-radius: 6px

    &:hover
      cursor: pointer
    &.vfi-incomplete:hover
      border-color: colorYellow
    &.vfi-submitted:hover
      border-color: colorPrimaryBlue
    &.vfi-processed:hover
      border-color: colorLightGreen

  & .vfi-section-head
    margin-bottom: megaSpacing
    color: colorBlack

    & .vfi-date
      float: left

    & .vfi-check-icon
      float: right
      width: 42px
      height: 42px
      background: url('../icons/checkmark-green.svg')
      background-size: cover
      background-repeat: no-repeat

    & .vfi-action
      float: right
      margin-left: mediumSpacing
      background-color: colorYellow
      color: colorBlack

      &.vfi-discard
        background-color: colorLightGray
        color: colorBlack

  & .vfi-bar
    position: relative
    width: 100%
    height: mediumSpacing
    background-color: colorLightGray
    border-radius: 12px
    overflow: hidden

  & .vfi-progress
    position: absolute
    top: 0px
    left: 0px
    height: 100%
    width: 40%
    background-color: colorPrimaryBlue

    &.vfi-submitted
      width: 100%

    &.vfi-processed
      width: 100%
      background-color: colorLightGreen

//
// Profile Options section
//
.vfi-profile-section#settings

  & .vfi-section-content
    height: megaSpacing

  & .vfi-settings-btn
    float: right
    &.logout
      background-color: colorDarkGray

    &.delete-account
      background-color: colorRed
