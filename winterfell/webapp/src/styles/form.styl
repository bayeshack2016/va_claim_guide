.signature
  width: 100%
  height: 150px

  & .canvas
    width: 100%
    height: 100%

.form-wrapper
  margin-left: 10%
  margin-right: 10%

.form-title
  margin-top: 1em

.floating-progress
  position: fixed
  min-width: 33vw
  right: 3vw
  bottom: 3vh
  padding: 10px 20px
  z-index: 999
  background-color: white
  border: solid 1px #525252
  border-radius: 10px

.floating-progress-text
  text-align: end

.form-name
  white-space: nowrap
  margin-right: 20px

.floating-progress
  & .progress
    margin-bottom: 0
  & .form-row
    margin-bottom: 10px

