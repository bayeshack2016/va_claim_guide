@import "standards.styl"

#vfi-ratings-categories

  width: maxWindowWidthPx
  min-width: minWindowWidthPx
  margin: 0 auto

  & table
    border-collapse: collapse;

  & table, th, td
    border-top: 1px solid black;

  & div.rating-category-select-button
    padding-left: 1em
    background-color: colorPrimaryBlue
    color: colorWhite
    border-top: 1px colorBlack solid
    line-height: 40px

  & div.rating-category-select-button:last-child
    border-bottom: 1px colorBlack solid

  & div.rating-category-select-button:before
    background-image: url("/icons/next-black.svg")
    position: relative
    height: 20px
    width: 20px
    background-size: 20px 20px
    display: inline-block
    content: ""
    top: 4px
    right: 5px

  & div.condition-select-button
    padding-left: 1em
    background-color: colorPrimaryBlue
    color: colorWhite
    border-top: 1px colorBlack solid
    line-height: 40px

  & div.condition-select-button:last-child
    border-bottom: 1px colorBlack solid

  & div.condition-select-button:before
    background-image: url("/icons/add-black.svg")
    position: relative
    height: 20px
    width: 20px
    background-size: 20px 20px
    display: inline-block
    content: ""
    top: 4px
    right: 5px
