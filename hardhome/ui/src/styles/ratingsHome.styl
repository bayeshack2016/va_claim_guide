@import "standards.styl"

#vfi-ratings-home
  width: maxWindowWidthPx
  min-width: minWindowWidthPx
  margin: 0 auto

  & .remove-rating-selection
    height: 40px
    width: 40px
    background: url('/icons/x-black.svg')
    background-size: cover
    background-repeat: no-repeat
    cursor: pointer

  & .rating-selection-row
    line-height: 30px

  & .rating-selection-row:hover
    background-color: #f9c642

  & .last-updated-statement
    margin-right: 0.5em

  & .rating-info-disclaimer
    font-style: italic

